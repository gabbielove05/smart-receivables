# JPMorgan Smart Receivables Navigator - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED API KEYS AND CREDENTIALS
# =============================================================================

# OpenAI API Configuration (REQUIRED for AI features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# SMTP Email Configuration (REQUIRED for email notifications)
# Use your organization's SMTP server settings
SMTP_HOST=smtp.jpmorgan.com
SMTP_PORT=587
SMTP_USER=your-email@jpmorgan.com
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply-receivables@jpmorgan.com

# =============================================================================
# OPTIONAL INTEGRATIONS (Enhance functionality when available)
# =============================================================================

# SendGrid API (OPTIONAL - Enhanced email delivery)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here

# Microsoft Teams Webhook (OPTIONAL - Real-time alerts)
# Create webhook in Teams channel: Connectors > Incoming Webhook
MS_TEAMS_WEBHOOK=https://outlook.office.com/webhook/your-webhook-url-here

# =============================================================================
# DATA SOURCE CONFIGURATION (Future integration)
# =============================================================================

# Snowflake Database Connection (OPTIONAL - Direct data ingestion)
SNOWFLAKE_CONN=snowflake://user:password@account/database/schema

# AWS S3 Bucket (OPTIONAL - Cloud data storage)
S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
APP_ENV=production
# Options: development, staging, production

# Logging Level
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Data Refresh Interval (minutes)
DATA_REFRESH_INTERVAL=30

# Maximum Records to Process
MAX_RECORDS=10000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Session Secret Key (Generate a secure random string)
SESSION_SECRET_KEY=your-secure-session-secret-key-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# API Request Timeout (seconds)
API_TIMEOUT=30

# =============================================================================
# ALERT THRESHOLDS AND BUSINESS RULES
# =============================================================================

# Default DSO Alert Threshold (days)
DEFAULT_DSO_THRESHOLD=45

# Default Overdue Alert Threshold (USD)
DEFAULT_OVERDUE_THRESHOLD=50000

# High-Value Account Threshold (USD)
HIGH_VALUE_THRESHOLD=100000

# Critical Priority Score Threshold
CRITICAL_PRIORITY_THRESHOLD=80

# Auto-Escalation Threshold (days overdue)
AUTO_ESCALATION_THRESHOLD=90

# =============================================================================
# ML MODEL CONFIGURATION
# =============================================================================

# Anomaly Detection Contamination Rate
ANOMALY_CONTAMINATION_RATE=0.1

# Model Retaining Schedule (hours)
MODEL_RETRAIN_INTERVAL=24

# SHAP Explanation Sample Size
SHAP_SAMPLE_SIZE=100

# Feature Importance Threshold
FEATURE_IMPORTANCE_THRESHOLD=0.05

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Default Currency
DEFAULT_CURRENCY=USD

# Default Date Format
DEFAULT_DATE_FORMAT=MM/DD/YYYY

# Default Timezone
DEFAULT_TIMEZONE=America/New_York

# Auto-Refresh Interval (seconds)
AUTO_REFRESH_INTERVAL=30

# Maximum Dashboard Load Time (seconds)
MAX_DASHBOARD_LOAD_TIME=10

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Enable Debug Mode (DO NOT use in production)
DEBUG_MODE=false

# Enable Test Data Generation
ENABLE_TEST_DATA=false

# Test Data Size (number of records)
TEST_DATA_SIZE=100

# Mock External Services (for testing)
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Streamlit Configuration
STREAMLIT_SERVER_PORT=5000
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true

# Health Check Endpoint
HEALTH_CHECK_ENABLED=true

# Metrics Collection
METRICS_ENABLED=true

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup Schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *

# Backup Retention (days)
BACKUP_RETENTION_DAYS=30

# Emergency Contact Email
EMERGENCY_CONTACT_EMAIL=support@jpmorgan.com

# =============================================================================
# COMPLIANCE AND AUDIT
# =============================================================================

# Enable Audit Logging
AUDIT_LOGGING=true

# Audit Log Retention (days)
AUDIT_RETENTION_DAYS=365

# Data Privacy Mode
DATA_PRIVACY_MODE=strict

# Encryption Key for Sensitive Data
ENCRYPTION_KEY=your-32-character-encryption-key

# =============================================================================
# INSTRUCTIONS FOR SETUP
# =============================================================================

# 1. Copy this file to .env in your project root:
#    cp .env.example .env

# 2. Fill in the REQUIRED values (marked as REQUIRED above):
#    - OPENAI_API_KEY: Essential for AI-powered features
#    - SMTP_* settings: Required for email notifications

# 3. Configure OPTIONAL integrations based on your needs:
#    - SENDGRID_API_KEY: For enhanced email delivery
#    - MS_TEAMS_WEBHOOK: For real-time Teams notifications

# 4. Adjust business rule thresholds to match your organization's policies

# 5. For production deployment:
#    - Set APP_ENV=production
#    - Set DEBUG_MODE=false
#    - Use strong values for SESSION_SECRET_KEY and ENCRYPTION_KEY
#    - Review and adjust all security settings

# 6. Test your configuration:
#    python -m tests.test_integrations

